<%= form_with url: auth_code_path, method: "get" do |form| %>
  <%= form.label :email, "email" %>
  <%= form.email_field :email, value: params[:email], placeholder: "you@email.com" %>
  <% if @show_additional_fields %>
    <%= form.label :first_name, "First name" %>
    <%= form.text_field :first_name, value: params[:name], placeholder: "John" %>
    <%= form.label :last_name, "Last name" %>
    <%= form.text_field :last_name, value: params[:name], placeholder: "Doe" %>
  <% end %>
  <%= form.submit "Send Code" %>
<% end %>