<h2>Collections</h2>

<table border>
    <thead>
        <tr>
            <th>Name</th>
            <th>Public</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @collections.each do |collection| %>
            <tr>
                <td><%= collection.name %></td>
                <td><%= collection.public %></td>
                <td>
                    <%= link_to "View", collection_path(collection) %>
                    <%= link_to "Edit", edit_collection_path(collection) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>