<div class="grid grid-cols-3 grid-rows-1 text-left">
    <div></div>
    <section>
        <h2 class="text-2xl">Your Collections</h2>
        <div class="grid grid-cols-2">
            <% @collections.each do |collection| %>
                <div class="grid grid-rows-1 grid-cols-[100px_auto]">
                    <img src="/favicon.ico" alt="<%= collection.name %>" class="w-24 h-24"/>
                    <div>
                        <div class="flex flex-row justify-start">
                            <h3 class="text-xl"><%= collection.name %></h3>
                            <%= collection.public ? inline_icon("private-unlocked") : inline_icon("private-outline") %>
                        </div>
                        <div class="flex flex-row -space-x-6 hover:-space-x-4">
                            <img src="/assets/svg/avatar-placeholder.svg" alt="<%= collection.name %>" class="w-10 h-10 rounded-full bg-gray-800"/>
                            <img src="/assets/svg/avatar-placeholder.svg" alt="<%= collection.name %>" class="w-10 h-10 rounded-full bg-gray-800"/>
                        </div>
                    </div>
                </div>
            <% end %>
            
        </div>
    </section>
    <div></div>
</div>